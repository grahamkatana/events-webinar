

<div style="margin-top:10vh;" class="col-lg-6 mx-auto">
<div style="" class="card shadow mb-3 mt-2">
<div class="card-body">
<h4 class="text-center mt-2 mb-2">Forgot your password?</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "admin_users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email,class:"mb-2 mt-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",value:"admin@site.com",class:"form-control form-control-lg" %>
  </div>

   <div class="d-grid gap-2 mb-3">
      <%=f.submit "Send me reset instructions", class:"btn btn-success btn-lg mt-3 mb-3"%>
    </div>
<% end %>


<%= render "admin_users/shared/links" %>

</div>
</div>
</div>


