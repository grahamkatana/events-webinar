<div style="margin-top:10vh;" class="col-lg-6 mx-auto">
<div style="" class="card shadow mb-3 mt-2">
<div class="card-body">
<h4 class="text-center mt-2 mb-2">Log in</h4>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email,class:"mb-2 mt-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",value:"admin@site.com",class:"form-control form-control-lg" %>
  </div>

  <div class="field">
    <%= f.label :password,class:"mb-2 mt-2" %>
    <%= f.password_field :password, autocomplete: "current-password", value:"password",class:"form-control form-control-lg" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
   <div class="d-grid gap-2 mb-3">
      <%=f.submit "Login", class:"btn btn-success btn-lg mt-3 mb-3"%>
    </div>

<% end %>

<%= render "admin_users/shared/links" %>

</div>
</div>
</div>

