<div class="col-lg-12 mt-2">
    <h3>Upcoming webinars</h3>
    <div class="row">
        <% @webinars.each do |webinar|%>
            <div class="col-lg-4">
                <div class="card shadow mb-3 mt-2">
                 <div class="bg-white card-header">
                    <%=webinar.daily_hours%>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">
                            <%=truncate(webinar.name,length:25)%>
                        </h4>
                        <p class="lead">
                        <%=truncate(webinar.description,length:70)%>
                        </p>
                        <h5><span class="badge bg-gray text-dark">From <%=webinar.start_date%> To <%=webinar.end_date%></span></h5>
                        <h5><span class="badge bg-dark text-white">Daily from <%=webinar.start_time%> To <%=webinar.end_time%></span></h5>
                        <%= link_to 'More details', webinar,class:"btn btn-outline-primary btn-block"%>
                    </div>
                </div>
            </div>
            <%end%>
    </div>
</div>