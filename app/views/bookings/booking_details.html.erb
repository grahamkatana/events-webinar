<div class="col-lg-12">
    <div class="card shadow mt-5 mb-5">
        <div class="card-header">
            <h5>
                <%=@booking.workshop.name%>
            </h5>
        </div>
        <div class="card-body">
            <h3>
                <%=@booking.customer.full_name%>
            </h3>
            <b>
                <h3 class="text-success">
                    <%=@booking.customer.email%>
                </h3>
            </b>
            <h4><span class="badge bg-gray text-dark">From <%=@booking.workshop.start_date%> To
                        <%=@booking.workshop.end_date%>
                </span></h4>
            <h4><span class="badge bg-dark text-white">Daily from <%=@booking.workshop.start_time%> To
                        <%=@booking.workshop.end_time%>
                </span></h4>

            <table class="table table-bordered">
                <tr>
                    <td>Number of tickets</td>
                    <td>
                        <%=@booking.no_of_tickets%>
                    </td>
                </tr>
                <tr>
                    <td>Amount paid</td>
                    <td>
                        <%=@booking.amount%>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>